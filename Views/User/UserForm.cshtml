@model MVCDemo.Models.UserModel

<main id="main" class="main">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title fs-4 text-center fw-bold fst-italic text-decoration-underline">USER DETAILS FORM</h1>

            <!-- General Form Elements -->
            <form>
                <div class="row mb-3">
                    <div class="col-sm-10">
                        <input type="hidden" class="form-control" asp-for="UserID">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label"><span class="text-danger">* </span>UserName</label>
                    <div class="col-sm-10">
                        <input asp-for="Username" type="text" class="form-control">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Email</label>
                    <div class="col-sm-10">
                        <input asp-for="Email" type="email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Password</label>
                    <div class="col-sm-10">
                        <input asp-for="Password" type="password" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label"><span class="text-danger">* </span>MobileNo</label>
                    <div class="col-sm-10">
                        <input asp-for="MobileNo" type="text" class="form-control">
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Address</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Address" type="text" class="form-control"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Active</label>
                    <div class="col-sm-10">
                        <label class="col-2">
                            <input asp-for="IsActive" type="radio" value="1" /> Yes
                        </label>
                        <label class="col-2">
                            <input asp-for="IsActive" type="radio" value="0" /> No
                        </label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                </div>

                <div class="row m-5 mb-3 text-center">
                    <div class="col-sm-10">
                        <button type="submit" asp-controller="User" asp-action="onSubmit" class="btn btn-primary">Submit</button>
                    </div>
                </div>

            </form><!-- End General Form Elements -->

        </div>
    </div>
</main>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}