@model MVCDemo.Models.BillsModel

<main id="main" class="main">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title fs-4 text-center fw-bold fst-italic text-decoration-underline">BILLS DETAILS FORM</h1>

            <!-- General Form Elements -->
            <form>
                <div class="row mb-3">
                    <div class="col-sm-10">
                        <input type="hidden" class="form-control" asp-for="BillID">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label"><span class="text-danger">* </span>BillNumber</label>
                    <div class="col-sm-10">
                        <input asp-for="BillNumber" type="text" class="form-control">
                        <span asp-validation-for="BillNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputDate" class="col-sm-2 col-form-label"><span class="text-danger">* </span>BillDate</label>
                    <div class="col-sm-10">
                        <input asp-for="BillDate" type="date" class="form-control">
                        <span asp-validation-for="BillDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label"><span class="text-danger">* </span>OrderDate</label>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList, "OrderID", "OrderDate"))">
                            <option value="">Select Order</option>
                        </select>
                        <span asp-validation-for="OrderID" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label"><span class="text-danger">* </span>TotalAmount</label>
                    <div class="col-sm-10">
                        <input asp-for="TotalAmount" type="text" class="form-control">
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label"><span class="text-danger">* </span>Discount</label>
                    <div class="col-sm-10">
                        <input asp-for="Discount" type="text" class="form-control">
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label"><span class="text-danger">* </span>NetAmount</label>
                    <div class="col-sm-10">
                        <input asp-for="NetAmount" type="text" class="form-control">
                        <span asp-validation-for="NetAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label"><span class="text-danger">* </span>UserName</label>
                    <div class="col-sm-10">
                        <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "Username"))">
                            <option value="">Select User</option>
                        </select>
                        <span asp-validation-for="UserID" class="text-danger"></span>
                    </div>
                </div>

                <div class="row m-5 mb-3 text-center">
                    <div class="col-sm-10">
                        <button asp-controller="Bills" asp-action="onSubmit" type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>

            </form><!-- End General Form Elements -->

        </div>
    </div>
</main>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}